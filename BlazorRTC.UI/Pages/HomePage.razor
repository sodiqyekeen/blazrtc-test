@page "/"
@implements IAsyncDisposable
@inject IJSRuntime js
@inject HttpClient _httpClient;
@inject IConfiguration _configuration

@if (_appStateManager.MeetingStarted)
{
    <CallScreen OnHangUp="HangUp" OnToggleMic="ToggleMic" OnToggleVideo="ToggleVideo" />
}
else
{

    <MudPaper Class="d-flex flex-column  justify-center align-content-center" Height="700px" Elevation="0">
        <MudPaper Class="pa-2 align-self-center" Width="300px" Height="100px" Elevation="0">
            <MudSwitch T="bool" CheckedChanged="ToggleStatus" ThumbIcon="@thumbIcon">@(joinMeeting?"Join Call":"Start Call")</MudSwitch>
            <MeetingForm OnSubmitNew="CreateMeeting" OnSubmitJoin="JoinMeeting" Join="joinMeeting" />
        </MudPaper>
    </MudPaper>
}

